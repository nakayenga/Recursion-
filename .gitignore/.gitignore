#include <stdio.h>
int factorial (int n);
int sum (int n);
int main(){
  int n;
  /*Enter the number*/
  printf("Enter the number:\n");
  scanf("%d", &n);
  /*This is the number you have entered*/
  printf("number to find factorial: %d\n", n);
  printf("factorial of number you entered is: %d\n", factorial(n));
  printf("sum of the numbers you entered is: %d\n", sum(n));
  
}
int factorial (int n){
    if (n==0)
      return 1;
    else
      return n*factorial(n-1);
    }
  
  int sum (int n){
    if (n==1)
      return 1;
    else
      return n+sum(n-1);
  }
